# https://editorconfig.org

root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.[ch]]
indent_size = 3
indent_style = space
max_doc_length = 79
max_line_length = 79

[CMakeLists.txt]
indent_size = unset
indent_style = space
max_doc_length = 79
max_line_length = 99

[Makefile*]
indent_size = unset
indent_style = unset
max_doc_length = unset
max_line_length = unset

[COMMIT_EDITMSG]
indent_size = unset
indent_style = space
max_doc_length = unset
max_line_length = 72
